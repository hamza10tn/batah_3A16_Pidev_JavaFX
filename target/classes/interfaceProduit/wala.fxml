<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="622.0" prefWidth="874.0" stylesheets="@../interfaceEnchere/Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerProduits.ProdController">

    <AnchorPane prefHeight="606.0" prefWidth="1102.0" styleClass="main-pane">
        <children>
            <!-- Titre -->
            <Label layoutX="104.0" layoutY="14.0" styleClass="title-label" text="Ventes aux Enchères, En route pour les bonnes affaires! " />

            <!-- Zone de recherche -->
            <TextField fx:id="searchField" layoutX="242.0" layoutY="50.0" onKeyReleased="#searchAuctions" prefHeight="50.0" prefWidth="290.0" promptText="Recherche..." />
            <Button layoutX="552.0" layoutY="50.0" mnemonicParsing="false" onAction="#searchAuctions" prefHeight="12.0" prefWidth="116.0" text="Recherche" />

            <!-- Liste des enchères -->
            <VBox fx:id="auctionsVBox" layoutX="14.0" layoutY="90.0" spacing="10.0" style="-fx-padding: 10px;" />

            <!-- Menu de côté droit -->
            <VBox layoutX="780.0" layoutY="90.0" spacing="10.0" style="-fx-background-color: #C3E6CB; -fx-padding: 10px;">
                <Button text="Ventes en cours" onAction="#handleVentesEnCours" />
                <Button text="Autre texte" onAction="#handleAutreTexte1" />
                <Button text="Autre texte" onAction="#handleAutreTexte2" />
            </VBox>
        </children>
        <padding>
            <Insets left="300.0" />
        </padding>
    </AnchorPane>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets left="100.0" />
    </padding>
</ScrollPane>